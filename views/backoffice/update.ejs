<%- include ('partials/backoffice_top.ejs') -%>
<div class="container">
  <h1 class="well"><%- title -%></h1>
  <div class="col-lg-12 well mt-4">
    <% if(alert) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%- alert -%>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% }; %>
    <div class="row">
      <form method="POST" action="/backoffice/update/<%= vare.varenummer %>" enctype="multipart/form-data">
        <div class="col-sm-12">
          <div class="row">
            <div class="col-6">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  value="<%= vare.varenummer %>"
                  placeholder="Varenummer"
                  name="varenummer"
                />
                <label for="floatingInput">Varenummer</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  value="<%= vare.varenavn %>"
                  placeholder="Varenavn"
                  name="varenavn"
                />
                <label for="floatingInput">Varenavn</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  value="<%= vare.varebeskrivelse %>"
                  placeholder="Varebeskrivelse"
                  name="varebeskrivelse"
                />
                <label for="floatingInput">Varebeskrivelse</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  value="<%= vare.pris %>"
                  placeholder="Pris"
                  name="pris"
                />
                <label for="floatingInput">Pris</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  value="<%= vare.enhedsbetegnelse %>"
                  placeholder="Enhedsbetegnelse"
                  name="enhedsbetegnelse"
                />
                <label for="floatingInput">Enhedsbetegnelse</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  value="<%= vare.indkøbspris %>"
                  placeholder="Indkøbspris"
                  name="indkøbspris"
                />
                <label for="floatingInput">Indkøbspris</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <input
                  type="file"
                  class="form-control"
                  placeholder="Billede"
                  name="billede"
                  value="<%= vare.billede.toString('base64') %>"
                />
                <label for="floatingInput">Billede</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  value="<%= vare.contenttype %>"
                  placeholder="Contenttype"
                  name="contenttype"
                />
                <label for="floatingInput">Contenttype</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  value="<%= vare.EAN %>"
                  placeholder="EAN"
                  name="EAN"
                />
                <label for="floatingInput">EAN</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <select name="vareundergruppe" class="form-select">
                  <% vareUndergruppe.forEach(function(vareUndergruppe) { %>
                    <% if(vare.vareundergruppe == vareUndergruppe.vareundergruppe) { %>
                      <option value="<%= vareUndergruppe.vareundergruppe %>"><%= vareUndergruppe.beskrivelse %></option>
                      <% }; %>
                    <% }); %>
                  <% vareUndergruppe.forEach(function(vareUndergruppe) { %>
                    <% if(vare.vareundergruppe != vareUndergruppe.vareundergruppe) { %>
                      <option value="<%= vareUndergruppe.vareundergruppe %>"><%= vareUndergruppe.beskrivelse %></option>
                      <% }; %>
                  <% }); %>
                </select>
                <label for="floatingInput">Vareundergruppe</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-floating mb-3">
                <button
                  type="submit"
                  class="btn btn-success form-control"
                  style="padding-top: 0; padding-bottom: 0"
                >
                  Opdater
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  <script src="../../public/javascripts/file_update_helper.js"></script>
  <%- include ('partials/backoffice_bot.ejs') -%>
</div>
